{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@styles/*": ["./src/styles/*"],
			"@components/*": ["./src/components/*"],
			"@features/*": ["./src/features/*"],
			"@assets/*": ["./src/assets/*"],
			"@pages/*": ["./src/pages/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@libs/*": ["src/libs/*"],
			"@helpers/*": ["src/helpers/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"declaration.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.stories.tsx"
	],
	"exclude": ["node_modules"]
}
